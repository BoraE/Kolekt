@import './resets.styl';
@import './login.styl';
@import './form-navigator.styl';

@require './variables.styl';

body {
    font-family: sans-serif;
    position: relative;
}

header, footer {
    position: absolute;
    height: $bar-height;
    width:100%;
    padding: 8px;
    background-color: $bar-color;
    opacity: 0.87;
}

header {
    top: 0;
    left: 0;
    border-bottom: 1px solid #AAA;
}

footer {
    bottom: 0;
    width: 100%;
    border-top: 1px solid #AAA;
}

main {
    position: absolute;
    overflow-y: auto;
    top: $bar-height;
    bottom: $bar-height;
    width: 100%;
}

.section_title {
    padding: 2px 8px;
    background-color: #2979FF;
    height: 32px;
    border-bottom: 1px solid #AAA;
    opacity: 0.72;
    font-size: 20px;
    font-family: arial, helvetica;
    opacity: 0.5;
}

.section_content {
    padding: 4px;
}

img {
    padding: 3px;
    height: 100px;
}

.disabled {
    opacity: 0.26;
}

.collapsed {
    opacity: 0.87;
}

.hide {
    display: none;
}

.selected {
    opacity: 0.5;
}

input[type=file] {
    display: none;
}
